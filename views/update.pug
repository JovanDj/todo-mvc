doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h1 Update todo 
        form(method="POST", action=`/${todo.todoId}/update`)
            input(type="text", value=todo.title name="title", placeholder="Write todo")
            input(type="text", value=todo.status name="status", placeholder="Write status")

            button(type="submit") Update
