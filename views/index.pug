doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 

        if todos.length === 0
            p No todos found
            p
                a(href="/create") Create your first Todo

        else
            ul
                each todo in todos
                    li
                        a(href=`/${todo.todoId}`)= `${todo.title} - ${todo.status}`